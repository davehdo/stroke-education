<%= form_with(model: message, local: true) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :recipient, "Recipient alias" %> 
    <%= form.text_field :recipient, id: :message_recipient, placeholder: "e.g. son 1, daughter 3" %>
  </div>
  
  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, id: :message_text %>
  </div>


  <div class="field">
    <%= form.hidden_field :report_id, id: :message_report_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :message_category, id: :message_message_category %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
