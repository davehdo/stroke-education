<div class="grid-x grid-padding-x" style="margin-top: 20px; margin-bottom: 20px;">
  <div class="medium-3 large-2 cell"><b><%= part.name %></b></div>
  <div class="medium-9 large-10 cell">
      <div class="grid-x grid-padding-x">
        <div class="medium-12 large-6 cell">
          <%= part.description_text %>
        </div>
        <div class="medium-12 large-6 cell">
          <i><%= part.goals_text %></i>
        </div>
      </div>
  </div>
</div>

<div class="text-center" style="margin-bottom: 30px;">
  <%= part.embedded_html.html_safe if part.embedded_html %>
</div>
