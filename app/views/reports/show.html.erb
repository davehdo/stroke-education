<p id="notice"><%= notice %></p>




<% @report.parts.group_by {|e| e.section}.each do |section, parts_in_section| %>
  <h5><%= section %></h5>

  <% parts_in_section.each do |part| %>
    <div class="grid-x grid-padding-x">
      <div class="medium-3 large-2 cell"><%= part.name %></div>
      <div class="medium-9 large-10 cell">
        <p><%= part.description_text %></p>
        <p><%= part.goals_text %></p>
      </div>
    </div>
  <% end %>

<% end %>


<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
