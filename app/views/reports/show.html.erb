<p id="notice"><%= notice %></p>




<% @report.parts.group_by {|e| e.section}.each do |section, parts_in_section| %>
  <h5><%= section %></h5>

  <table>

    <tbody>
      
      <% parts_in_section.each do |part| %>
        <tr>
          <td><%= part.name %></td>
          <td>
            <div><b>Description:</b></div>
            <%= part.description_text %>
            <div><b>Goals:</b></div>
            <%= part.goals_text %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
