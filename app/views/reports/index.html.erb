

<p id="notice"><%= notice %></p>

<div class="grid-x grid-padding-x">
  <div class="cell">
  
    <h1>Reports</h1>

    <table>
      <thead>
        <tr>
          <th>For (Initials)</th>
          <th>Created</th>
          <th>Using this link,
            patient can access w/o login <br />
            And stats will be kept
          </th>
          <th>Access History</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td>
              <%= link_to "Patient #{ report.initials }", report %>
            </td>
            <td><%= time_ago_in_words report.created_at %> ago</td>
            <td><div style="max-width: 150px; overflow: hidden; ">
              <code>
                <small><%= request.env["HTTP_HOST"] %><%= url_for( report ) %>?key=<%= report.key %></small>
              </code>
            </div>
            </td>
            <td>
              <% if report.accessed_at %>
                <%= report.accessed_at.size %> views across <%= report.accessed_at.uniq {|e| e.to_date}.size %> different dates. Last <%= time_ago_in_words report.accessed_at.last %> ago.
              <% end %>
            </td>
            <td>
              <%= link_to 'Preview', report_path(report), class: "button" %>
            </td>              
            <td>
              <%= link_to 'Edit', edit_report_path(report), class: "button" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br />

    <%= link_to 'New Report', new_report_path, class: "button" %>
    
  </div>
</div>

