

<p id="notice"><%= notice %></p>

<div class="grid-x grid-padding-x">
  <div class="cell">
  
    <h1>Reports</h1>

    <table>
      <thead>
        <tr>
          <th>For (Initials)</th>
          <th>Created</th>
          <th>Link to Patient View<br />
            Patient can access without logging in using this link<br />
            And statistics will be kept
          </th>
          <th>Access History</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td>
              <%= link_to "Patient #{ report.initials }", report %>
              (<%= link_to 'Edit', edit_report_path(report) %>)
            </td>
            <td><%= time_ago_in_words report.created_at %> ago</td>
            <td><code><small><%= request.env["HTTP_HOST"] %><%= url_for( report ) %>?key=<%= report.key %></small></code></td>
            <td>
              <% if report.accessed_at %>
                <%= report.accessed_at.size %> views across <%= report.accessed_at.uniq {|e| e.to_date}.size %> different dates. Last <%= time_ago_in_words report.accessed_at.last %> ago.
              <% end %>
            </td>
            <td>
              <%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br />

    <%= link_to 'New Report', new_report_path %>
    
  </div>
</div>

