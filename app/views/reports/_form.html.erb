<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :initials %>
    <%= form.text_field :initials %>
  </div>

  <% Part.all.group_by {|e| e.section}.each do |section, parts_for_section| %>
    <h5><%= section %></h5>
    <% parts_for_section.each do |part| %>
      <div>

        <div class="field">
          <%= check_box_tag "report[part_ids][]",  part.to_param, nil %>
          <%= label_tag "report[part_ids][]", part.name %>
        </div>
      </div>
    <% end %>
  <% end %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
